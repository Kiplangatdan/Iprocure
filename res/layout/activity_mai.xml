<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="-3dp"
    android:background="@drawable/small_mainbg1"
    tools:context=".Main" >
       
<RelativeLayout
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <TextView
        android:id="@+id/banner_name"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:shadowColor="#2c5741"
        android:shadowDx="0"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:text="Enter Products Details"
        android:textColor="#008000"
        android:textSize="32sp"
        android:textStyle="normal"
        android:typeface="normal" />

    <EditText
        android:id="@+id/productname"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/banner_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Product Name"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="20sp" >

        <requestFocus />
    </EditText>
    <EditText
        android:id="@+id/type"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:layout_below="@+id/productname"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Type e.g fertilizers"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="20sp" >
    </EditText>
    

    <EditText
        android:id="@+id/price"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:layout_below="@+id/type"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Price (KShs.)"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="20sp" >
    </EditText>
     <Button
            android:id="@+id/btnAdd"
            android:layout_below="@+id/price"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/button"
            android:hapticFeedbackEnabled="true"
            android:text="@string/add"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" 
            android:onClick="btnAdd_click"/>
     <Button
            android:id="@+id/btnCancel"
            android:layout_below="@+id/price"
            android:layout_toRightOf="@id/btnAdd"
            android:layout_width="100dp"
            android:layout_height="60dp"
            
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/button"
            android:hapticFeedbackEnabled="true"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" 
            android:onClick="btnCancel_click"/>

   

</RelativeLayout>
</LinearLayout>
</ScrollView>